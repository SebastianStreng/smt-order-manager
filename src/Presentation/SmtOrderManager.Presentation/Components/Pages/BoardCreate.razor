@page "/boards/create"
@using SmtOrderManager.Presentation.ViewModels
@using System.ComponentModel.DataAnnotations
@inject BoardCreateViewModel ViewModel
@implements IDisposable

<PageTitle>New Board - SMT Order Manager</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header">
                    <h4 class="mb-0">
                        <span class="bi bi-plus-circle"></span> Create new board
                    </h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrWhiteSpace(ViewModel.ErrorMessage))
                    {
                        <ErrorAlert ErrorMessage="@ViewModel.ErrorMessage" />
                    }

                    <EditForm Model="@ViewModel" OnValidSubmit="HandleValidSubmit" FormName="CreateBoardForm">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label for="name" class="form-label">Name *</label>
                            <InputText id="name"
                                       class="form-control"
                                       @bind-Value="ViewModel.Name"
                                       placeholder="e.g., Arduino Uno Shield v2"
                                       disabled="@ViewModel.IsLoading" />
                            <ValidationMessage For="@(() => ViewModel.Name)" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label for="description" class="form-label">Description *</label>
                            <InputTextArea id="description"
                                           class="form-control"
                                           @bind-Value="ViewModel.Description"
                                           rows="3"
                                           placeholder="Board description..."
                                           disabled="@ViewModel.IsLoading" />
                            <ValidationMessage For="@(() => ViewModel.Description)" class="text-danger" />
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="length" class="form-label">Length (mm) *</label>
                                <InputNumber id="length"
                                             class="form-control"
                                             @bind-Value="ViewModel.Length"
                                             disabled="@ViewModel.IsLoading" />
                                <ValidationMessage For="@(() => ViewModel.Length)" class="text-danger" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="width" class="form-label">Width (mm) *</label>
                                <InputNumber id="width"
                                             class="form-control"
                                             @bind-Value="ViewModel.Width"
                                             disabled="@ViewModel.IsLoading" />
                                <ValidationMessage For="@(() => ViewModel.Width)" class="text-danger" />
                            </div>
                        </div>

                        @if (ViewModel.Length > 0 && ViewModel.Width > 0)
                        {
                            <div class="alert alert-info">
                                <span class="bi bi-calculator"></span>
                                <strong>Area:</strong> @((ViewModel.Length * ViewModel.Width / 100).ToString("F2")) cm² (@(ViewModel.Length * ViewModel.Width) mm²)
                            </div>
                        }

                        <div class="d-flex justify-content-between">
                            <a href="/boards" class="btn btn-secondary">
                                <span class="bi bi-x-circle"></span> Cancel
                            </a>
                            <button type="submit"
                                    class="btn btn-primary"
                                    disabled="@ViewModel.IsLoading">
                                @if (ViewModel.IsLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                    <text>Creating board...</text>
                                }
                                else
                                {
                                    <span class="bi bi-check-circle"></span>
                                    <text> Create board</text>
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>

            <div class="mt-3">
                <a href="/boards" class="text-decoration-none">
                    <span class="bi bi-arrow-left"></span> Back to board list
                </a>
            </div>
        </div>
    </div>
</div>

@code {
    protected override void OnInitialized()
    {
        ViewModel.StateChanged += OnViewModelStateChanged;
    }

    private void OnViewModelStateChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    private async Task HandleValidSubmit()
    {
        await ViewModel.CreateAsync();
    }

    public void Dispose()
    {
        ViewModel.StateChanged -= OnViewModelStateChanged;
    }
}

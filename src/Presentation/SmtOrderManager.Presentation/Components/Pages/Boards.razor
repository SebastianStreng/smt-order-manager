@page "/boards"
@using SmtOrderManager.Presentation.ViewModels
@inject BoardListViewModel ViewModel
@implements IDisposable

<PageTitle>Boards - SMT Order Manager</PageTitle>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>üî≤ Alle Boards</h1>
        <button class="btn btn-primary" @onclick="ViewModel.NavigateToCreate">
            <span class="bi bi-plus-circle"></span> Neues Board
        </button>
    </div>

    <!-- Search Bar -->
    @if (!ViewModel.IsLoading && ViewModel.Boards.Any())
    {
        <div class="card mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <label class="form-label">Suche</label>
                        <input type="text"
                               class="form-control"
                               placeholder="Board-Name durchsuchen..."
                               value="@ViewModel.SearchTerm"
                               @oninput="@(e => { ViewModel.SearchTerm = e.Value?.ToString(); StateHasChanged(); })" />
                    </div>
                    <div class="col-md-6 d-flex align-items-end">
                        <div class="text-muted">
                            @if (ViewModel.FilteredBoards.Count != ViewModel.Boards.Count)
                            {
                                <text>Zeige @ViewModel.FilteredBoards.Count von @ViewModel.Boards.Count Boards</text>
                            }
                            else
                            {
                                <text>@ViewModel.Boards.Count Board(s) gesamt</text>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Loading State -->
    @if (ViewModel.IsLoading)
    {
        <LoadingSpinner Message="Boards werden geladen..." />
    }
    else if (!string.IsNullOrWhiteSpace(ViewModel.ErrorMessage))
    {
        <ErrorAlert ErrorMessage="@ViewModel.ErrorMessage" />
    }
    else if (!ViewModel.Boards.Any())
    {
        <!-- Empty State -->
        <div class="alert alert-info">
            <h4><span class="bi bi-inbox"></span> Noch keine Boards vorhanden</h4>
            <p>Erstellen Sie Ihr erstes Board, um loszulegen!</p>
            <button class="btn btn-primary" @onclick="ViewModel.NavigateToCreate">
                <span class="bi bi-plus-circle"></span> Erstes Board erstellen
            </button>
        </div>
    }
    else if (!ViewModel.FilteredBoards.Any())
    {
        <!-- No Results -->
        <div class="alert alert-warning">
            <h5><span class="bi bi-search"></span> Keine Boards gefunden</h5>
            <p>Keine Boards entsprechen dem Suchbegriff "@ViewModel.SearchTerm".</p>
        </div>
    }
    else
    {
        <!-- Boards Grid -->
        <div class="row">
            @foreach (var board in ViewModel.FilteredBoards)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm hover-shadow"
                         style="cursor: pointer;"
                         @onclick="@(() => ViewModel.NavigateToDetail(board.Id))">
                        <div class="card-body">
                            <h5 class="card-title">
                                <span class="bi bi-grid-3x3"></span> @board.Name
                            </h5>

                            <p class="card-text text-muted mb-3">
                                @if (!string.IsNullOrWhiteSpace(board.Description))
                                {
                                    @(board.Description.Length > 80 ? board.Description.Substring(0, 80) + "..." : board.Description)
                                }
                                else
                                {
                                    <em>Keine Beschreibung</em>
                                }
                            </p>

                            <div class="mb-3">
                                <div class="row">
                                    <div class="col-6">
                                        <small class="text-muted">
                                            <strong>Abmessungen</strong><br />
                                            üìè @ViewModel.GetDimensions(board)
                                        </small>
                                    </div>
                                    <div class="col-6">
                                        <small class="text-muted">
                                            <strong>Components</strong><br />
                                            <span class="bi bi-cpu"></span> @ViewModel.GetComponentCount(board)
                                        </small>
                                    </div>
                                </div>
                            </div>

                            <div class="d-grid">
                                <button class="btn btn-sm btn-outline-primary"
                                        @onclick:stopPropagation="true"
                                        @onclick="@(() => ViewModel.NavigateToDetail(board.Id))">
                                    <span class="bi bi-eye"></span> Details ansehen
                                </button>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <small class="text-muted">
                                Erstellt: @board.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

<style>
    .hover-shadow {
        transition: box-shadow 0.2s ease-in-out;
    }

    .hover-shadow:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
</style>

@code {
    protected override async Task OnInitializedAsync()
    {
        ViewModel.StateChanged += OnViewModelStateChanged;
        await ViewModel.LoadAsync();
    }

    private void OnViewModelStateChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        ViewModel.StateChanged -= OnViewModelStateChanged;
    }
}

@page "/boards"
@rendermode InteractiveServer
@using SmtOrderManager.Presentation.ViewModels
@inject BoardListViewModel ViewModel
@implements IDisposable

<PageTitle>Boards - SMT Order Manager</PageTitle>

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">All boards</h1>
        <button class="btn btn-primary" @onclick="ViewModel.NavigateToCreate">
            <span class="bi bi-plus-circle"></span> New board
        </button>
    </div>

    @if (!ViewModel.IsLoading && ViewModel.Boards.Any())
    {
        <div class="card mb-4">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <label class="form-label">Search</label>
                        <input type="text"
                               class="form-control"
                               placeholder="Search by board name..."
                               value="@ViewModel.SearchTerm"
                               @oninput="@(e => { ViewModel.SearchTerm = e.Value?.ToString(); StateHasChanged(); })" />
                    </div>
                    <div class="col-md-6 d-flex align-items-end">
                        <div class="text-muted">
                            @if (ViewModel.FilteredBoards.Count != ViewModel.Boards.Count)
                            {
                                <text>Showing @ViewModel.FilteredBoards.Count of @ViewModel.Boards.Count boards</text>
                            }
                            else
                            {
                                <text>@ViewModel.Boards.Count board(s) total</text>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    @if (ViewModel.IsLoading)
    {
        <LoadingSpinner Message="Loading boards..." />
    }
    else if (!string.IsNullOrWhiteSpace(ViewModel.ErrorMessage))
    {
        <ErrorAlert ErrorMessage="@ViewModel.ErrorMessage" />
    }
    else if (!ViewModel.Boards.Any())
    {
        <div class="alert alert-info">
            <h4><span class="bi bi-inbox"></span> No boards yet</h4>
            <p>Create your first board to get started.</p>
            <button class="btn btn-primary" @onclick="ViewModel.NavigateToCreate">
                <span class="bi bi-plus-circle"></span> Create first board
            </button>
        </div>
    }
    else if (!ViewModel.FilteredBoards.Any())
    {
        <div class="alert alert-warning">
            <h5><span class="bi bi-search"></span> No boards found</h5>
            <p>No boards match the search term "@ViewModel.SearchTerm".</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var board in ViewModel.FilteredBoards)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm hover-shadow"
                         style="cursor: pointer;"
                         @onclick="@(() => ViewModel.NavigateToDetail(board.Id))">
                        <div class="card-body">
                            <h5 class="card-title d-flex align-items-center gap-2">
                                <span class="bi bi-grid-3x3"></span> @board.Name
                            </h5>

                            <p class="card-text text-muted mb-3">
                                @if (!string.IsNullOrWhiteSpace(board.Description))
                                {
                                    @(board.Description.Length > 80 ? board.Description.Substring(0, 80) + "..." : board.Description)
                                }
                                else
                                {
                                    <em>No description</em>
                                }
                            </p>

                            <div class="mb-3">
                                <div class="row">
                                    <div class="col-6">
                                        <small class="text-muted">
                                            <strong>Dimensions</strong><br />
                                            @ViewModel.GetDimensions(board)
                                        </small>
                                    </div>
                                    <div class="col-6">
                                        <small class="text-muted">
                                            <strong>Components</strong><br />
                                            <span class="bi bi-cpu"></span> @ViewModel.GetComponentCount(board)
                                        </small>
                                    </div>
                                </div>
                            </div>

                            <div class="d-grid">
                                <button class="btn btn-sm btn-outline-primary"
                                        @onclick:stopPropagation="true"
                                        @onclick="@(() => ViewModel.NavigateToDetail(board.Id))">
                                    <span class="bi bi-eye"></span> View details
                                </button>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <small class="text-muted">
                                Created: @board.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                            </small>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    protected override async Task OnInitializedAsync()
    {
        ViewModel.StateChanged += OnViewModelStateChanged;
        await ViewModel.LoadAsync();
    }

    private void OnViewModelStateChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        ViewModel.StateChanged -= OnViewModelStateChanged;
    }
}

@page "/orders/create"
@rendermode InteractiveServer
@attribute [Authorize]
@using SmtOrderManager.Presentation.ViewModels
@using System.ComponentModel.DataAnnotations
@inject OrderCreateViewModel ViewModel
@implements IDisposable

<PageTitle>New Order - SMT Order Manager</PageTitle>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header">
                    <h4>
                        <span class="bi bi-plus-circle"></span> Create New Order
                    </h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrWhiteSpace(ViewModel.ErrorMessage))
                    {
                        <ErrorAlert ErrorMessage="@ViewModel.ErrorMessage" />
                    }

                    <EditForm Model="@ViewModel" OnValidSubmit="HandleValidSubmit" FormName="CreateOrderForm">
                        <DataAnnotationsValidator />

                        <div class="mb-3">
                            <label for="description" class="form-label">Description *</label>
                            <InputTextArea id="description"
                                           class="form-control"
                                           @bind-Value="ViewModel.Description"
                                           rows="3"
                                           placeholder="e.g., Prototype Series Q1 2026"
                                           disabled="@ViewModel.IsLoading" />
                            <ValidationMessage For="@(() => ViewModel.Description)" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label for="orderDate" class="form-label">Order Date *</label>
                            <InputDate id="orderDate"
                                       class="form-control"
                                       @bind-Value="ViewModel.OrderDate"
                                       disabled="@ViewModel.IsLoading" />
                        </div>

                        <div class="alert alert-info">
                            <span class="bi bi-info-circle"></span>
                            <strong>Note:</strong> After creating the order, you can add boards to it.
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="/orders" class="btn btn-secondary" disabled="@ViewModel.IsLoading">
                                <span class="bi bi-x-circle"></span> Cancel
                            </a>
                            <button type="submit"
                                    class="btn btn-primary"
                                    disabled="@ViewModel.IsLoading">
                                @if (ViewModel.IsLoading)
                                {
                                    <span class="spinner-border spinner-border-sm me-2"></span>
                                    <text>Creating order...</text>
                                }
                                else
                                {
                                    <span class="bi bi-check-circle"></span>
                                    <text> Create Order</text>
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>

            <div class="mt-3">
                <a href="/orders" class="text-decoration-none">
                    <span class="bi bi-arrow-left"></span> Back to Order List
                </a>
            </div>
        </div>
    </div>
</div>

@code {
    protected override void OnInitialized()
    {
        ViewModel.StateChanged += OnViewModelStateChanged;
    }

    private void OnViewModelStateChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    private async Task HandleValidSubmit()
    {
        await ViewModel.CreateAsync();
    }

    public void Dispose()
    {
        ViewModel.StateChanged -= OnViewModelStateChanged;
    }
}
